<h1>Wonderful Ideas</h1>
<h4><%= link_to "Create Idea", new_user_idea_path %></h4>
<br>

<% @ideas.each do |idea| %>
  <% idea.idea_images.each do |image| %>
    <%= image_tag(image.image_url, size: "150x150")%>
  <% end %>

  Category: <%= idea.category.title %>
  <br>
  <%= idea.content %>
  <br>
  <%= link_to "edit", edit_idea_path(idea) %>
  <%= link_to "delete", idea_path(idea), method: "delete", data: {confirm: "Are you sure you want to delete this idea?"} %>
  <br>
  <br>
<% end %>

<br>
<br>
<%= link_to "Logout", logout_path, method: "delete" %>
<br>
<br>
