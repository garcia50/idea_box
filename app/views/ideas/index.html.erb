<div class="usershowparentt">
  <div class="usp">
  <h1>Wonderful Ideas</h1>
    <div class="usershoww">  
      <h4><%= link_to "Create Idea", new_user_idea_path %></h4>

      <% @ideas.each do |idea| %>
        <% idea.images.each do |image| %>
          <%= image_tag(image.image_url, size: "200x150")%>
        <% end %>

        Category: <%= idea.category.title %>
        <br>
        <%= idea.content %>
        <%= link_to "edit", edit_idea_path(idea) %>
        <%= link_to "delete", idea_path(idea), method: "delete", data: {confirm: "Are you sure you want to delete this idea?"} %>
        <br>
        <br>
        <br>
      <% end %>
    </div>  
  </div>
</div>