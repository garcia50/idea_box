<div class="registerbody">
  <div class="login">
    <h1>If its free its fo me!</h1>
    <h3>Register here!</h3>
  </div>


  <div class="register">
    <%= form_for @user do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password, "Password" %>
      <%= f.text_field :password %>
      <div class="button">
        <%= f.submit %>
    <% end %>      
      </div>
  </div>
</div>