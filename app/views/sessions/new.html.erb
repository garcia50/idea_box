<div class="registerbody">
  <div class="login">
    <h2>Login</h2>
  </div>
  
  <div class="register">
    <%= form_tag login_path do %>
      <%= label_tag :name %>
      <%= text_field_tag :name %>

      <%= label_tag :email %>
      <%= text_field_tag :email %>

      <%= label_tag :password, "password" %>
      <%= password_field_tag :password %>

    <div class="button">
      <%= submit_tag "Log In" %>
    <% end %>
    </div>
  </div>
</div>